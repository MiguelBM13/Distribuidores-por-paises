@model IEnumerable<T2_Bovadilla_Miguel.Models.Distribuidor>
@{
    ViewData["Title"] = "Distribuidores de Peru";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Distribuidores de Perú</h1>

<div class="container pt-3">

    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary"> Lista de Distribuidor</h2>

        </div>
        <div class="col-6">
            <a asp-controller="Distribuidor" asp-action="Crear" class="btn btn-primary">Nueva Distribuidor</a>

        </div>

    </div>

    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>ID</th>
                    <th> Nombre Distribuidor </th>
                    <th> RazonSocial </th>
                    <th> Telefono </th>
                    <th>Pais</th>
                    <th>  Año de Inicio de Operacion</th>
                    <th>  Contacto</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th width="5%">@item.Id</th>
                        <th width="20%">@item.NombreDistribuidor</th>
                        <th width="20%">@item.RazonSocial</th>
                        <th width="20%">@item.Telefono</th>
                        <th width="20%">@item.Pais</th>
                        <th width="25%">@item.AñoInicioOperacion</th>
                        <th width="30%">@item.Contacto</th>
                        <th>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Distribuidor" asp-action="Editar" asp-route-Id="@item.Id" class="btn btn-primary mx-2">Editar</a>
                                <a asp-controller="Distribuidor" asp-action="Eliminar" asp-route-Id="@item.Id" class="btn btn-danger mx-2">Eliminar</a>
                            </div>
                        </th>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No hay registros en la Distribuidor</p>
    }

</div>
